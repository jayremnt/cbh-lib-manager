{
  "name": "CBH Lib Manager",
  "version": "1.0",
  "description": "Chrome extension for managing books and borrowers of CBH",
  "permissions": [
    "downloads",
    "cookies",
    "storage",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "https://cbh-server.herokuapp.com/*"
  ],
  "browser_action": {
    "default_title": "CBH Control Panel"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "manifest_version": 2
}
